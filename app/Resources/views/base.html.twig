<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="Description" content="{{ block('title') }}">
    <meta name="Keywords" content="{% block meta_keywords %}iklan, promo, lowongan kerja, jual beli{% endblock %}">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <meta property="fb:app_id" content="{{ facebook_app_id }}">
    <meta property="og:url" content="{{ app.request.uri }}">
    <meta property="og:title" content="{{ block('title') }}">
    <meta property="og:image" content="{% block meta_image %}{{ asset('favicon.ico') }}{% endblock %}">
    <title>{% block title %}Adstacy.com - Ads have never been so fun{% endblock %}</title>

    <link rel="icon shortcut" type="image/ico" href="{{ asset('favicon.ico') }}">

    {% block stylesheets %}
      {% stylesheets filter='cssrewrite, uglifycss'
        'bundles/adstacyapp/less/adstacy.less'
        'bundles/adstacyapp/css/ui.totop.css'
        'bundles/adstacyapp/css/font-awesome.css'
        'bundles/adstacyapp/css/social-buttons.css'
        'bundles/adstacyapp/css/brand.css'
      %}
        <link href="{{ asset_url }}" type="text/css" rel="stylesheet">
      {% endstylesheets %}
    {% endblock %}

    {% block head_scripts %}
      {% if not app.debug %}
        <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/2.0.3/jquery.min.js" type="text/javascript"></script>
        <script src="//cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.0.0/js/bootstrap.min.js" type="text/javascript"></script>
        <script src="//cdnjs.cloudflare.com/ajax/libs/masonry/3.1.1/masonry.pkgd.min.js" type="text/javascript"></script>
      {% else %}
        {% javascripts filter='uglifyjs2'
          '@AdstacyAppBundle/Resources/public/js/jquery.min.js'
          '@AdstacyAppBundle/Resources/public/js/bootstrap.min.js'
          '@AdstacyAppBundle/Resources/public/js/masonry.pkgd.min.js'
        %}
          <script src="{{ asset_url }}" type="text/javascript"></script>
        {% endjavascripts %}
      {% endif %}
      {% javascripts filter='uglifyjs2'
        '@AdstacyAppBundle/Resources/public/js/modernizr.min.js'
        '@AdstacyAppBundle/Resources/public/js/holder.js'
        '@AdstacyAppBundle/Resources/public/js/jquery.scrolltofixed.min.js'
        '@AdstacyAppBundle/Resources/public/js/easing.js'
        '@AdstacyAppBundle/Resources/public/js/jquery.ui.totop.min.js'
        '@AdstacyAppBundle/Resources/public/js/jquery.lazyload.min.js'
        '@AdstacyAppBundle/Resources/public/js/jquery.jscroll.js'
        '@AdstacyAppBundle/Resources/public/js/FileAPI.min.js'
        '@AdstacyAppBundle/Resources/public/js/module/ajaxlink.js'
        'bundles/fosjsrouting/js/router.js'
      %}
        <script src="{{ asset_url }}" type="text/javascript"></script>
      {% endjavascripts %}
      <script src="{{ path('fos_js_routing_js', {"callback": "fos.Router.setData"}) }}" type="text/javascript"></script>
    {% endblock %}
    {% if not app.debug %}
      <script type="text/javascript">
        var _gaq = _gaq || [];
        _gaq.push(['_setAccount', 'UA-38929872-2']);
        _gaq.push(['_trackPageview']);
        _gaq.push(['_setDomainName', 'adstacy.com']);
      </script>
    {% endif %}
  </head>
  <body>
    {% block body %}
      <header id="main-header">
        <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
          <div class="adstacy-container">
            <div class="navbar-header">
              <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
              </button>
              <a class="navbar-brand" href="{{ path('homepage') }}" title="Adstacy">
                <img src="{{ asset('bundles/adstacyapp/img/logo.png') }}" alt="Adstacy">
              </a>
            </div>

            <div class="collapse navbar-collapse navbar-ex1-collapse">
              <ul class="nav navbar-nav">
                <li>
                  <a id="btn-navbar-expand" class="btn btn-default navbar-btn" title="Browse">
                    <span aria-hidden="true" class="icon-chevron-up icon-chevron-down"></span>
                  </a>
                </li>
              </ul>

              <form id="form-search" action="{{ path('adstacy_app_search') }}" class="navbar-form navbar-left" style="position: relative;" role="search">
                <input id="search-bar" type="text" class="form-control" placeholder="{{"search"|trans}}" name="q" value="{{ app.request.query.get('q') }}">
                <button type="submit" class="search-btn">
                  <span aria-hidden="true" class="icon-search"></span>
                </button>
              </form>

              <ul class="nav navbar-nav navbar-right">
                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                  <li>
                    <a href="{{ path('adstacy_app_ad_create') }}" id="create-ads" class="btn btn-primary navbar-btn" title="{{"ads.create"|trans}}">
                      <span aria-hidden="true" class="icon-plus"></span>
                    </a>
                  </li>
                  <li id="user-dropdown">
                    <div class="btn-group navbar-btn">
                      <button type="button" class="btn btn-default btn-user dropdown-toggle" data-toggle="dropdown">
                        <img class="mini-profpic" src="{{ profile_pic(app.user) }}" alt="{{ app.user.username }}">
                        <span class="username-label">{{ app.user.username }}</span>
                      </button>
                      <ul class="dropdown-menu" role="menu">
                        <li><a href="{{ path('adstacy_app_stream') }}">{{"stream"|trans}}</a></li>
                        <li><a href="{{ path('adstacy_app_user_profile', {username: app.user.username}) }}">{{"profile"|trans}}</a></li>
                        <li><a href="{{ path('fos_user_profile_edit') }}">{{"settings"|trans}}</a></li>
                        <li><a href="{{ path('fos_user_security_logout') }}">{{"logout"|trans}}</a></li>
                      </ul>
                    </div>
                  </li>
                {% else %}
                  <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                      {{"login"|trans}} <b class="caret"></b>
                    </a>
                    <ul id="login-dropdown-container" class="dropdown-menu">
                      <li>
                        {{ form_login() }}
                      </li>
                      <li class="divider"></li>
                      <li>
                        <p>
                          {% for owner in hwi_oauth_resource_owners() %}
                            <a class="btn btn-block btn-{{ owner }}" href="{{ hwi_oauth_login_url(owner) }}">{{"login.with"|trans}} {{ owner|trans({}, 'HWIOAuthBundle') }}</a>
                          {% endfor %}
                        </p>
                      </li>
                      <li class="divider"></li>
                      <li>
                        <p>
                          <a href="{{ path('fos_user_registration_register') }}">{{"register"|trans}}</a>
                          <br>
                          <a href="{{ path('fos_user_resetting_request') }}">{{"forgot_password"|trans}}</a>
                        </p>
                      </li>
                    </ul>
                  </li>
                {% endif %}
              </ul>
            </div>
          </div>

          <div id="navbar-expand-container" class="hide">
            <ul class="adstacy-container nav-expand">
              <li class="hot-category"><a href="{{ path('homepage') }}" title="Home">Home</a></li>
              <li class="hot-category"><a href="{{ path('adstacy_app_search', {q: 'jual'}) }}" title="Jual">Jual</a></li>
              <li class="hot-category"><a href="{{ path('adstacy_app_search', {q: 'beli'}) }}" title="Beli">Beli</a></li>
              <li class="hot-category"><a href="{{ path('adstacy_app_search', {q: 'loker'}) }}" title="Lowongan Kerja">Lowongan Kerja</a></li>
              <li class="hot-category"><a href="{{ path('adstacy_app_search', {q: 'promo'}) }}" title="Promo">Promo</a></li>
              <li class="hot-category"><a href="{{ path('adstacy_app_search', {q: 'event'}) }}" title="Event">Event</a></li>
              <li><a href="{{ path('adstacy_app_search', {q: 'rumah'}) }}" title="Rumah">Rumah</a></li>
            </ul>
            <ul id="footer" class="adstacy-container clearfix">
              <li><a href="{{ path('adstacy_app_page_show', {key: 'about'}) }}">{{"about"|trans}}</a></li>
              <li><a href="{{ path('adstacy_app_page_show', {key: 'terms'}) }}">{{"terms"|trans}}</a></li>
              <li><a href="{{ path('adstacy_app_page_show', {key: 'privacy-policy'}) }}">{{"privacy"|trans}}</a></li>
            </ul>
          </div>
        </nav>
      </header>
      <div class="body clearfix">
        {% set allFlashes = app.session.flashbag.all() %}
        {% if allFlashes|length > 0 %}
          <div class="adstacy-container">
            {% for key, flashes in allFlashes %}
              {% for flash in flashes %}
                <div class="alert alert-{{ key }}">{{ flash }}</div>
              {% endfor %}
            {% endfor %}
          </div>
        {% endif %}

        {% block content %}{% endblock %}
      </div>
    {% endblock %}

    {% block javascripts %}
      {% if not app.debug %}
      <script type="text/javascript">
        (function() {
          var ga = document.createElement('script');     ga.type = 'text/javascript'; ga.async = true;
          ga.src = ('https:'   == document.location.protocol ? 'https://ssl'   : 'http://www') + '.google-analytics.com/ga.js';
          var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
        })();
      </script>
      {% endif %}
      {% javascripts filter='uglifyjs2'
        '@AdstacyAppBundle/Resources/public/js/app.js'
      %}
        <script src="{{ asset_url }}" type="text/javascript"></script>
      {% endjavascripts %}
    {% endblock %}
  </body>
</html>
