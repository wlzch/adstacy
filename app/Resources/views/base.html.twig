              <li><a href="#">Otomotif</a></li>
              <li><a href="#">Rumah Sakit</a></li>
              <li><a href="#">Tempat Wisata</a></li>
            </ul>
            <ul id="footer" class="adstacy-container clearfix">
              <li><a href="#">About</a></li>
              <li><a href="#">Privacy and Terms</a></li>
              <li><a href="#">Copyright and Trademark</a></li>
            </ul>
          </div>
        </nav>
      </header>
      <div class="body clearfix">
        {% set allFlashes = app.session.flashbag.all() %}
        {% if allFlashes|length > 0 %}
          <div class="adstacy-container">
            {% for key, flashes in allFlashes %}
              {% for flash in flashes %}
                <div class="alert alert-{{ key }}">{{ flash }}</div>
              {% endfor %}
            {% endfor %}
          </div>
        {% endif %}

        {% block content %}{% endblock %}
      </div>
    {% endblock %}

    {% block javascripts %}
      {% if not app.debug %}
      <script type="text/javascript">
        (function() {
          var ga = document.createElement('script');     ga.type = 'text/javascript'; ga.async = true;
          ga.src = ('https:'   == document.location.protocol ? 'https://ssl'   : 'http://www') + '.google-analytics.com/ga.js';
          var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
        })();
      </script>
      {% endif %}
      {% javascripts filter='uglifyjs2'
        '@AdstacyAppBundle/Resources/public/js/app.js'
      %}
        <script src="{{ asset_url }}" type="text/javascript"></script>
      {% endjavascripts %}
    {% endblock %}
  </body>
</html>
