    <form id="search-form" action="{{ path('adstacy_app_search') }}">
      <input type="text" class="form-control" placeholder="{{ "search"|trans }}" name="q" value="{{ app.request.query.get('q') }}">
      <button id="search-dismiss" type="button" class="close">&times;</button>
      <input type="submit" class="hide">
      <input id="search-type" type="hidden" name="type" value="{% if isSearchUser %}users{% else %}ads{% endif %}">
    </form>

    <ul class="nav navbar-nav navbar-right">
      <li><a id="btn-search" href="#Search" class="icon icon-search" title="Search"><span>Search</span></a></li>
      {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
        <li><a href="{{ path('adstacy_app_ad_create') }}" id="create-advert-btn" class="icon icon-plus" title="{{ "ads.create"|trans }}"><span>{{ "ads.create"|trans }}</span></a></li>
        {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
          <li>
            <a href="#Notification" class="icon icon-bell dropdown-toggle" id="notif-btn" title="Notification" data-toggle="dropdown" data-href="{{ path('adstacy_notification_readall') }}"><span>Notification</span></a>
            <span class="notif-count label label-danger">{{ app.user.notificationsCount }}</span>
            {{ render_top_notification(5) }}
          </li>
        {% endif %}
      {% else %}
        {% if register is not defined or (register is defined and register == true) %}
          <li><a id="register-link" href="{{ path('fos_user_registration_register') }}">{{ "register"|trans }}</a></li>
        {% endif %}

        <li><a id="mobile-login-link" href="{{ path('fos_user_security_login') }}">Login</a></li>
        <li id="login-express-dropdown" class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">{{ "login"|trans }}</a>
          <div id="login-express" class="dropdown-menu">
            <div class="dropdown-box-body">
              {{ form_login() }}

              {% for owner in hwi_oauth_resource_owners() %}
                <a class="btn btn-block btn-{{ owner }}" href="{{ hwi_oauth_login_url(owner) }}">{{"login.with"|trans}} {{ owner|trans({}, 'HWIOAuthBundle') }}</a>
              {% endfor %}
            </div>
            <div class="dropdown-box-footer">
              <a href="{{ path('fos_user_resetting_request') }}">{{ "forgot_password"|trans }}</a>
            </div>
          </div>
        </li>

      {% endif %}
    </ul>
  </nav>
