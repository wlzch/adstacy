<div class="ad">
  <div class="pic">
    <a href="{{ path('adstacy_app_ad_show', {id: ad.id}) }}">
    <img class="lazy" src="{{ asset('bundles/adstacyapp/img/transparent.gif') }}"
      data-original="{{ vich_uploader_asset(ad.image, 'file')|imagine_filter('thumbnail') }}"
      width="{{ thumb_width }}px" height="{{ ad.thumbHeight }}px" alt="{{ ad.description }}">
    </a>
  </div>
  <div class="ad-desc">
    <div class="inline-block">
      <a class="{% if app.user %}box-medium{% else %}box-large{% endif %} btn-muted btn-gray"><span class="promotes-count">{{ ad.promoteesCount }}</span> promotes</a>
      {% if app.user %}
        {% set promoted = app.user.hasPromote(ad) %}
        <a href="{{ path('adstacy_app_ad_unpromote', {id: ad.id}) }}" data-toggle="tooltip" title="Unpromote" class="btn-success unpromote {% if not promoted %}hide{% endif %}">
          <span aria-hidden="true" class="icon-bullhorn">
        </a>
        <a href="{{ path('adstacy_app_ad_promote', {id: ad.id}) }}" data-toggle="tooltip" title="Promote" class="btn-primary promote {% if promoted %}hide{% endif %}">
          <span aria-hidden="true" class="icon-bullhorn">
        </a>
      {% endif %}
    </div>
    <div class="desc">
      <p>{{ parse_url(parse_hashtag(ad.description)) }}</p>
    </div>
    <div class="ad-user clearfix border-top">
      {% include 'AdstacyAppBundle:User:user_mini.html.twig' with {user: ad.user, text: 'Ads by'} %}
    </div>
  </div>
</div>
