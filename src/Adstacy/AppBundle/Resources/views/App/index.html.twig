{% extends is_ajax() ? '::ajax.html.twig' : 'AdstacyAppBundle::layout.html.twig' %}

{% block content %}
  <div class="masonry jscroll clearfix">
    {{ block('ajax_content') }}
  </div>
{% endblock %}

{% block ajax_content %}
  {% set id = null %}
  {% for ad in ads %}
    {% set id = ad.id %}
    {% include 'AdstacyAppBundle:Includes:ad.html.twig' with {ad: ad} %}
  {% endfor %}
  {% if ads | length >= max_ad_per_page %}
    <a href="{{ path('homepage', {'id': id})}}" class="btn btn-lg btn-default btn-block next-page">More</a>
  {% endif %}
{% endblock %}

{% block javascripts %}
  {{ parent() }}
  <script type="text/javascript">
    $(function() {
      $('.jscroll').jscroll({
        nextSelector: 'a.next-page',
        callback: function() {
          var $posts = $('.jscroll-added:last .ad');
          $masonry = $('.masonry').masonry('appended', $posts);
          $posts.find('img.lazy').lazyload();
          $posts.find('.ad-desc').ajaxlink('ads');
        }
      });
    });
  </script>
{% endblock %}
