{% extends 'AdstacyAppBundle::layout.html.twig' %}

{% block content %}
  <div class="masonry jscroll">
    {% include 'AdstacyAppBundle:Includes:posts_search.html.twig' with {paginator: paginator} %}
  </div>
{% endblock %}

{% block javascripts %}
  {{ parent() }}
  <script type="text/javascript">
    $(function() {
      $('.jscroll').jscroll({
        nextSelector: 'a.next-page',
        callback: function(a, b) {
          var $posts = $('.jscroll-added:last .post');
          $masonry = $('#posts').masonry('appended', $posts);
          $posts.find('img.lazy').lazyload();
        }
      });
    });
  </script>
{% endblock %}
