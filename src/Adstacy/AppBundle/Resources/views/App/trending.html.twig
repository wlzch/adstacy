{% extends is_ajax() ? '::ajax.html.twig' : 'AdstacyAppBundle::layout.html.twig' %}

{% block title %}Trending ads | Adstacy{% endblock %}

{% block content %}
  {{ block('ajax_content') }}
{% endblock %}

{% block ajax_content %}
  {% for ad in ads %}
    {% include 'AdstacyAppBundle:Ad:ad.html.twig' with {ad: ad} %}
  {% endfor %}
{% endblock %}
