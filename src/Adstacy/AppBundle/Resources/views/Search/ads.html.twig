{% extends 'AdstacyAppBundle:Search:search.html.twig' %}

{% block search_content %}
  {% if paginator.getCurrentPageResults|length > 0 %}
    <div class="masonry jscroll">
      {{ block('ajax_content') }}
    </div>
  {% else %}
    <div class="jumbotron text-center">
      <h1>No Results Found</h1>
      <p class="lead">Please try a different keywords.</p>
    </div>
  {% endif %}
{% endblock %}

{% block ajax_content %}
  {% for ad in paginator.getCurrentPageResults %}
    {% include 'AdstacyAppBundle:Ad:ad.html.twig' with {ad: ad} %}
  {% endfor %}
  {% if paginator.hasNextPage %}
    {% set params = {page: paginator.getNextPage}|merge(app.request.query.all) %}
    <a href="{{ path('adstacy_app_search_ads', params )}}" class="btn btn-default btn-lg btn-block next-page">More</a>
  {% endif %}
{% endblock %}

{% block javascripts %}
  {{ parent() }}
  <script type="text/javascript">
    $(function() {
      $('.jscroll').jscroll({
        nextSelector: 'a.next-page',
        callback: function(a, b) {
          var $ads = $('.jscroll-added:last .ad');
          $masonry = $('.masonry').masonry('appended', $ads);
          $ads.find('img.lazy').lazyload();
          $ads.find('.ad-desc').ajaxlink('ads');
          $ads.find('[data-toggle="tooltip"]').tooltip();
        }
      });
    });
  </script>
{% endblock %}
