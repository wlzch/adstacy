{% extends 'AdstacyAppBundle::layout.html.twig' %}

{% block title %}{{ user.realName }}{% endblock %}

{% block meta_image %}
{% if user.image %}
{{ app.request.scheme~"://"~app.request.host~vich_uploader_asset(user, 'image') }}
{% else %}
{{ profile_pic(user) }}
{% endif %}
{% endblock %}

{% block content %}
  {% block show_content %}{% endblock %}
{% endblock %}

{% block javascripts %}
  {{ parent() }}
  <script type="text/javascript">
    $(function() {
      Adstacy.follow($('#user-profile'));
    });
  </script>
{% endblock %}
