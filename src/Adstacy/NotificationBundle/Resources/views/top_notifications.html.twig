<ul id="top-notifications" class="dropdown-menu notifications">
  {% if notifications|length > 0 %}
    {% for notification in notifications %}
      <li class="clearfix">
        <img src="{{ profile_pic(notification.user) }}" class="notif-pic" />
        {{ notification.content|raw }}
        <time>{{ ago(notification.created) }}</time>
      </li>
    {% endfor %}
  {% else %}
    <li class="no-new-notifications">{{ 'notification.no_notification'|trans }}</li>
  {% endif %}
  <li id="show-all-notifications" class="list-group-item"><a href="{{ path('adstacy_notification_show') }}">{{ 'notification.show_all'|trans }}</a></li>
</ul>
