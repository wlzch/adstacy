{% extends 'AdstacyAppBundle::layout.html.twig' %}

{% form_theme form _self %}

{% block stylesheets %}
  {{ parent() }}
  {% stylesheets filter='cssrewrite, uglifycss'
    'bundles/adstacyapp/less/layout/change_password.less'
  %}
    <link href="{{ asset_url }}" type="text/css" rel="stylesheet">
  {% endstylesheets %}
{% endblock %}

{% block form_row %}
  <div class="form-group">
    {{ form_label(form, label, {label_attr: {class: 'pull-left'} }) }}
    <div class="form-widget">
      {{ form_widget(form, {attr: {class: 'form-control'} }) }}
      {{ form_errors(form, {attr: {class: 'alert alert-danger'} }) }}
    </div>
  </div>
{% endblock %}

{% block content %}
  <div id="change-password" class="panel panel-default column">
    <div class="panel-heading"><h2>{{"form_password.title"|trans}}</h2></div>
    <div class="panel-body">
      {{ form_start(form, { attr: { class: '', role: 'form' } }) }}
        {{ form_errors(form) }}

        {{ form_row(form.current_password) }}
        {{ form_row(form.plainPassword.newPassword) }}
        {{ form_row(form.plainPassword.newPasswordConfirmation) }}

        <div class="form-group">
          <div class="form-widget offset-label">
            {{ form_widget(form.save, { attr: { class: 'btn btn-primary' } }) }}
          </div>
        </div>

        {{ form_rest(form) }}
      {{ form_end(form) }}
    </div>
  </div>
{% endblock %}
