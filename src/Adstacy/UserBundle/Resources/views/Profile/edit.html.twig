{% extends 'AdstacyAppBundle::layout.html.twig' %}

{% trans_default_domain 'FOSUserBundle' %}

{% block stylesheets %}
  {{ parent() }}
  {% stylesheets filter='cssrewrite, uglifycss'
    'bundles/adstacyuser/less/settings.less'
  %}
    <link href="{{ asset_url }}" type="text/css" rel="stylesheet">
  {% endstylesheets %}
{% endblock %}

{% block content %}
<div class="settings-container panel panel-default">
  <section class="settings-section">
    <h1>User Info</h1>
    {{ form_start(form, { attr: { class: 'form-horizontal', role: 'form' } }) }}
      {% set user = form.vars.data %}

      <div class="form-group">
        {{ form_label(form.image, label|default(null), { label_attr: { class: 'control-label' } }) }}
        <div class="form-widget">
          {{ form_widget(form.image, { attr: { class: 'form-control' } }) }}
        </div>
      </div>


      <div class="form-group">
        {{ form_label(form.username, label|default(null), { label_attr: { class: 'control-label' } }) }}
        <div class="form-widget">
          {{ form_widget(form.username, { attr: { class: 'form-control' } }) }}
        </div>
      </div>

      <div class="form-group">
        <label class="control-label">Password</label>
        <div class="form-widget">
          <a href="{{ path('fos_user_change_password') }}">change password</a>
        </div>
      </div>

      <div class="form-group">
        {{ form_label(form.email, label|default(null), { label_attr: { class: 'control-label' } }) }}
        <div class="form-widget">
          {{ form_widget(form.email, { attr: { class: 'form-control' } }) }}
        </div>
      </div>

      <div class="form-group">
        {{ form_label(form.realName, label|default(null), { label_attr: { class: 'control-label' } }) }}
        <div class="form-widget">
          {{ form_widget(form.realName, { attr: { class: 'form-control' } }) }}
        </div>
      </div>

      <div class="form-group">
        {{ form_label(form.about, label|default(null), { label_attr: { class: 'control-label' } }) }}
        <div class="form-widget">
          {{ form_widget(form.about, { attr: { class: 'form-control' } }) }}
        </div>
      </div>

      <div class="form-group">
        <label class="control-label">&nbsp;</label>
        <div class="form-widget">
          {{ form_widget(form.save, { attr: { class: 'form-control btn btn-primary' } }) }}
        </div>
      </div>

      <div class="form-group">
        <label class="control-label">&nbsp;</label>
        <div class="form-widget">
          <a href="{{ path('fos_user_resetting_request') }}">forgot your password?</a>
        </div>
      </div>

      {{ form_rest(form) }}

    {{ form_end(form) }}
  </section>

  <section class="settings-section">
    <h1>Facebook Connect</h1>
    <div class="form-horizontal">
      <div class="form-group">
        <label class="control-label">Status</label>
        <div class="form-widget">
          {% if user.facebookId %}
            Connected to {{ user.facebookRealName }}
          {% else %}
            Not Connected
          {% endif %}
        </div>
      </div>
      <div class="form-group">
        <label class="control-label">&nbsp;</label>
        <div class="form-widget">
          {% if user.facebookId %}
            <a href="{{ path('adstacy_app_user_disconnect', {service: 'facebook'}) }}" class="btn btn-facebook">Disconnect Facebook Account</a>
          {% else %}
            <a href="{{ path('hwi_oauth_service_redirect', {service: 'facebook'}) }}" class="btn btn-facebook">Connect with Facebook</a>
          {% endif %}
        </div>
      </div>
    </div>
  </section>

  <section class="settings-section">
    <h1>Twitter Connect</h1>
    <div class="form-horizontal">
      <div class="form-group">
        <label class="control-label">Status</label>
        <div class="form-widget">
          {% if user.twitterId %}
            Connected to {{ user.twitterRealName }}
          {% else %}
            Not Connected
          {% endif %}
        </div>
      </div>
      <div class="form-group">
        <label class="control-label">&nbsp;</label>
        <div class="form-widget">
          {% if user.twitterId %}
            <a href="{{ path('adstacy_app_user_disconnect', {service: 'twitter'}) }}" class="btn btn-twitter">Disconnect Twitter Account</a>
          {% else %}
            <a href="{{ path('hwi_oauth_service_redirect', {service: 'twitter'}) }}" class="btn btn-twitter">Connect with Twitter</a>
          {% endif %}
        </div>
      </div>
    </div>
  </section>
</div>
{% endblock %}
